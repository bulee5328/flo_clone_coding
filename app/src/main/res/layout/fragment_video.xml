<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/video_recent_tv"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="최신순"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/video_btn_below_iv"
            android:layout_width="13sp"
            android:layout_height="13sp"
            android:src="@drawable/nugu_btn_down"
            app:layout_constraintStart_toEndOf="@+id/video_recent_tv"
            app:layout_constraintTop_toTopOf="@+id/video_recent_tv"
            app:layout_constraintBottom_toBottomOf="@+id/video_recent_tv"
            />

        <ImageView
            android:id="@+id/video_album1_iv"
            android:layout_width="400dp"
            android:layout_height="240dp"
            android:src="@drawable/img_video_exp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/video_recent_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/video_album_title1_tv"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:text="[MV] Coin"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_album1_iv"/>

        <TextView
            android:id="@+id/video_album_singer1_tv"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:text="아이유 (IU) | 2021.03.26"
            android:textStyle="bold"
            android:textColor="@color/gray_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_album_title1_tv"/>

        <ImageView
            android:id="@+id/video_album2_iv"
            android:layout_width="400dp"
            android:layout_height="240dp"
            android:src="@drawable/img_video_exp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/video_album_singer1_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/video_album_title2_tv"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:text="[MV] 라일락 (LILAC)"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_album2_iv"/>

        <TextView
            android:id="@+id/video_album_singer2_tv"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:text="아이유 (IU) | 2021.03.25"
            android:textStyle="bold"
            android:textColor="@color/gray_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_album_title2_tv"/>

        <ImageView
            android:id="@+id/video_album3_iv"
            android:layout_width="400dp"
            android:layout_height="240dp"
            android:src="@drawable/img_video_exp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/video_album_singer2_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/video_album_title3_tv"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="[MV] Celebrity"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_album3_iv"/>

        <TextView
            android:id="@+id/video_album_singer3_tv"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:text="아이유 (IU) | 2021.01.27"
            android:textStyle="bold"
            android:textColor="@color/gray_color"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_album_title3_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>