<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_pannel_background2_iv"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_first_album_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_pannel_btn_nugu2_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/btn_main_mike"
        app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_ticket2_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_pannel_btn_ticket2_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/btn_main_ticket"
        app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_setting2_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_pannel_btn_setting2_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/btn_main_setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_pannel_title2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="마음에도 차 한 잔의\n여유가 필요할 때"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu2_iv" />

    <ImageView
        android:id="@+id/home_pannel_btn_play2_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_panel_play_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_title2_tv" />

    <TextView
        android:id="@+id/home_pannel_album_info2_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp"
        android:text="총 15곡 2019.11.11"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img2_01_iv"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/home_pannel_album_img2_01_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/img_album_exp"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album_img2_02_iv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/home_pannel_album_title2_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="따뜻한 그날"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer2_02_tv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album_img2_01_iv"
        app:layout_constraintTop_toTopOf="@id/home_pannel_album_img2_01_iv" />

    <TextView
        android:id="@+id/home_pannel_album_singer2_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="우리집"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img2_01_iv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album_img2_01_iv"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title2_01_tv" />


    <ImageView
        android:id="@+id/home_pannel_album_img2_02_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/img_album_exp"
        app:layout_constraintBottom_toBottomOf="@id/home_pannel_background2_iv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/home_pannel_album_title2_03_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="마음이 가는대로"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer2_04_tv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album_img2_02_iv"
        app:layout_constraintTop_toTopOf="@id/home_pannel_album_img2_02_iv" />

    <TextView
        android:id="@+id/home_pannel_album_singer2_04_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="All Note"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img2_02_iv"
        app:layout_constraintStart_toEndOf="@id/home_pannel_album_img2_02_iv"
        app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title2_03_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>